<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/album_description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost of total price"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select VAT percent:"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/black"
        android:layout_marginVertical="14dp"
        android:textSize="18dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio_button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_10"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
            android:id="@+id/radio_button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_15"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
           android:id="@+id/radio_button20"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/_20"
           android:textAppearance="?android:textAppearanceMedium" />
    </RadioGroup>

    <Switch
        android:id="@+id/backup_photos_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:textSize="16dp"
        android:text="Round Up Total?                                                   "
        android:textAppearance="?android:textAppearanceSmall" />

    <Button
        android:id="@+id/button"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="CALCULATE VAT"/>

</LinearLayout>